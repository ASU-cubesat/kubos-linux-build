menuconfig BR2_PACKAGE_KUBOS_PUMPKIN_MCU
    bool "Pumpkin MCU Service"
    default n
    depends on BR2_PACKAGE_PYTHON
    select BR2_PACKAGE_PYTHON_GRAPHENE
    select BR2_PACKAGE_KUBOS_SERVICE_LIB
    select BR2_PACKAGE_KUBOS_PUMPKIN_MCU_API
    help
        Include the Pumpkin MCU Kubos Service.
        
if BR2_PACKAGE_KUBOS_PUMPKIN_MCU

config BR2_KUBOS_PUMPKIN_MCU_INIT_LVL
    int "Service Init Run Level"
    default 20
    range 10 99
    depends on BR2_PACKAGE_KUBOS_PUMPKIN_MCU
    help
        The initialization priority level of the Pumpkin MCU Kubos service.
        The lower the number, the earlier the service is initialized.
        
config BR2_KUBOS_PUMPKIN_MCU_RESTART_COUNT
    int "Service Restart Limit"
    default 3
    depends on BR2_PACKAGE_KUBOS_PUMPKIN_MCU
    depends on BR2_PACKAGE_MONIT
    help
        The maximum number of times the service should be restarted within the timeframe
        specified by BR2_KUBOS_PUMPKIN_MCU_RESTART_CYCLES if it goes down

config BR2_KUBOS_PUMPKIN_MCU_RESTART_CYCLES
    int "Service Restart Limit Timeframe"
    default 10
    depends on BR2_PACKAGE_KUBOS_PUMPKIN_MCU
    depends on BR2_PACKAGE_MONIT
    help
        The timeframe in which the maximum number of service restarts must occur in order
        for the system to stop trying to recover the service.
        
        Equal to this number times the length of a single Monit sleep cycle (in seconds)
        

endif
