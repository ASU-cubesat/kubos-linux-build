menuconfig BR2_PACKAGE_KUBOS
	bool "Kubos Services"
	default y
	help
		Enable KubOS Linux Services

if BR2_PACKAGE_KUBOS

	choice
		prompt "Kubos Version"
		default BR2_KUBOS_LATEST_MINOR
		config BR2_KUBOS_LATEST_MAJOR
			bool "Latest major version"
		config BR2_KUBOS_LATEST_MINOR
			bool "Latest minor version"
		config BR2_KUBOS_LATEST_PATCH
			bool "Latest patch version"
		config BR2_KUBOS_LATEST_BUILD
			bool "Latest build"
		config BR2_KUBOS_CUSTOM_VERSION
			bool "Custom version"
	endchoice

	config BR2_KUBOS_CUSTOM_VERSION_VALUE
		string "Custom Kubos version"
		depends on BR2_KUBOS_CUSTOM_VERSION
	
	config BR2_KUBOS_VERSION
		string
		default "1.0.0" if BR2_KUBOS_LATEST_MAJOR
		default "1.1.0" if BR2_KUBOS_LATEST_MINOR
		default "1.1.1" if BR2_KUBOS_LATEST_PATCH
		default "latest" if BR2_KUBOS_LATEST_BUILD
		default BR2_KUBOS_CUSTOM_VERSION_VALUE if BR2_KUBOS_CUSTOM_VERSION

	source "$BR2_EXTERNAL_KUBOS_LINUX_PATH/package/kubos/kubos-telemetry/Config.in"
	source "$BR2_EXTERNAL_KUBOS_LINUX_PATH/package/kubos/kubos-command/Config.in"
endif
